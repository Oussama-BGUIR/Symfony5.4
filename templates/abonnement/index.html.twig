{% extends 'base.html.twig' %}

{% block title %}Les abonnements{% endblock %}

{% block body %}
    <h1>Les abonnements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Le nom</th>
                <th>Le prènom</th>
                <th>Le numéro de télèphone</th>
                <th>L'email</th>
                 <th>Le type</th>
             
            </tr>
        </thead>
        <tbody>
            {% for i in Abonnement %}
            <tr>
                <td>{{i.id}}</td>
                <td>{{i.nom}}</td>
                <td>{{i.prenom}}</td>
                <td>{{i.numero}}</td>
                <td>{{i.email}}</td>
                 <td>{{i.type}}</td>
            
                <td>
                     <button class=" btn "><a href="{{ path('app_abonnement_show', {'id': i.id}) }}">Afficher</button>
                    <button class=" btn "><a href="{{ path('app_abonnement_edit', {'id': i.id}) }}">Modifier</button>
                    <button class=" btn "><a href="{{ path('app_abonnement_delete', {'id': i.id}) }}" >Supprimer</button>
                 

                     
                </td>
                

            </tr>
            {% endfor %}
              
        </tbody>
    </table>
  
    <br>
    <div class="align-center"> {{ knp_pagination_render(Abonnement) }}</div>
   
    <a href="{{ path('app_abonnement_new') }}">Créer un nouveau abonnement</a>
    <br>
     <br>
    <a href="{{ path('exportexcel') }}">Exporter vers Excel</a>
    
{% endblock %}
