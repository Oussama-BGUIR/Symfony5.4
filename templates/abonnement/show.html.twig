{% extends 'base.html.twig' %}

{% block title %}L'abonnement{% endblock %}

{% block body %}
    <h1>L'abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonnement.nom }}</td>
            </tr>
            <tr>
                <th>Prènom</th>
                <td>{{ abonnement.prenom }}</td>
            </tr>
            <tr>
                <th>Numéro de télèphone</th>
                <td>{{ abonnement.numero }}</td>
            </tr>
             <tr>
                <th>Email</th>
                <td>{{ abonnement.email }}</td>
            </tr>

            <tr>
                <th>Type</th>
                <td>{{ abonnement.type }}</td>
            </tr>
           
       
        </tbody>
    </table>

    <a href="{{ path('app_abonnement_index') }}">Retour à la liste</a>
    <br><br>

    <button class=" btn "><a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}">Modifier</a></button>
    <br><br>

    {{ include('abonnement/_delete_form.html.twig') }}
{% endblock %}
