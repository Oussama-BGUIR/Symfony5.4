{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.image }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}"> <button class="btn">{{ button_label|default('show') }}</button></a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><button class="btn">{{ button_label|default('edit') }}</button></a>
                    <a href="{{ path('app_categorie_delete', {'id': categorie.id}) }}"><button class="btn">{{ button_label|default('delete') }}</button></a>
                </td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}"><button class="btn">{{ button_label|default('Create new') }}</button></a>
{% endblock %}
