{% extends 'base.html.twig' %}

{% block title %}L'offre{% endblock %}

{% block body %}
    <h1>L'offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Les points</th>
                <td>{{ offre.points }}</td>
            </tr>
            <tr>
                <th>Le Prix</th>
                <td>{{ offre.prix }}</td>
            </tr>
            <tr>
                <th>Le pourcentage</th>
                <td>{{ offre.pourcentage }}</td>
            </tr>
            <tr>
                <th>Date début</th>
                <td>{{offre.dateDebut |date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Date fin</th>
                <td>{{offre.dateFin |date('Y-m-d')}}</td>
            </tr>

           
           
       
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">Retour à la liste</a>
    <br><br>

    <button class=" btn "><a href="{{ path('app_offre_edit', {'id': offre.id}) }}">Modifier</a></button>
    <br><br>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
