
{% extends 'admin.html.twig' %}


{% block body %}
<div id="main_content">
    <div class="page-loader-wrapper">
        <div class="loader">
        </div>
    </div>
        <div class="section-body mt-3">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-md-flex justify-content-between mb-2">
                                    <ul class="nav nav-tabs b-none">
                                        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#list"><i class="fa"></i>Carte des plat</a></li>
                                        <li class="btn" ><a href="{{ path('app_plat_new') }}" class="rounded" ><i class="fa fa-plus"></i> <strong> Ajouter un plat </strong></a></li>
                                    </ul>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8 col-md-6 col-sm-10">
                                        <div class="input-group mb-1">
                                            <input type="text" class="form-control" placeholder="plats">
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-12">
                                        <a href="javascript:void(0);" class="btn btn-primary btn-block mb-1" title="">Recherche</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section-body">
            <div class="container-fluid">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="list" role="tabpanel">
                        <div class="row clearfix">
                            {% for plat in plats %}
                            
                                <div class="col-xl-4 col-lg-4 col-md-6">
                                <br>
                                    <div class="card">
                                         <div class="card-body text-center ribbon">
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <img class="card-img-top embed-responsive-item" src="{{asset('uploads/plats/'~plat.image)}}" >
                                            </div>
                                            <h6 class="mt-3 mb-0">{{ plat.nom }}</h6>
                                            <ul class="mt-3 list-unstyled d-flex justify-content-center">
                                                <div class="row text-center mt-4">
                                                    <div class="col-6 ">
                                                        <label class="mt-3 mb-0">{{ plat.disponibilte ? 'Disponible' : 'Non Disponible' }}</label>
                                                    </div>
                                                    <div class="col-5 ">
                                                        <label class="mt-3 mb-0">{{ plat.calorie }} Calories </label>
                                                        
                                                    </div>

                                                </div> 
                                                <br>
                                                <div class="row text-center mt-4">
                                                 <div class="col-9 ">
                                                <label class="mt-3 mb-0">{{ plat.prix }} Millimes </label>
                                                </div> 
                                                   </div> 
                                            </ul>
                                            <div class="row text-center mt-4">
                                                <div class="col-6 border-right">
                                                    <button  onclick="window.location.href = '{{ path('app_plat_show', {'id': plat.id}) }}' ;" class="btn btn-outline-danger">  Voir par d√©tails   </button>
                                                </div>
                                                <div class="col-6 ">
                                                <button  onclick="window.location.href = '{{ path('app_plat_edit', {'id': plat.id}) }}' ;" class="btn btn-outline-danger"> Modifier le Menu</button>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>

                            {% else %}
                                  <tr>
                                 <h1> il n'ya aucun plat !<h1>
                                </tr>

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}
