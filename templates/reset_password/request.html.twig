{% extends 'base.html.twig' %}

{% block title %}Reset your pacdssword{% endblock %}

{% block body %}


    <div class="page-wraper">
        <div id="loading-icon-bx"></div>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="account-form">
            <div class="account-head" style="background-image:url(assets/images/background/bg2.jpg);">
                <a href="index.html"><img src="assets/images/logo-white-2.png" alt=""></a>
            </div>
            <div class="account-form-inner">
                <div class="account-container">
                    <div class="heading-bx left">
                        <h2 class="title-head">Forget <span>Password</span></h2>
                        <p>Login Your Account <a href={{ path('app_login') }}>Click here</a></p>
                    </div>
                    <div class="contact-bx">
                        <div class="row placeani">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label>Your Email Address</label>
                                        {{ form_start(requestForm,{'attr':{'novalidate':'novalidate'  }}) }}

                                        {{  form_label(requestForm.email,' ')}}
                                        {{ form_widget(requestForm.email) }}
                                        {{  form_errors(requestForm.email)}}
                                        <div>
                                            <small>
                                                Enter your email address and we will send you a
                                                link to reset your password.
                                            </small>
                                        </div>

                                        <button name="submit" type="submit" value="Submit" class="btn button-md">Submit</button>
                                        {{ form_end(requestForm) }}                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>








{% endblock %}



